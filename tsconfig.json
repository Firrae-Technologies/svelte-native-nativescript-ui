{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
      "declaration": true,
      "declarationDir": "./dist",
      "module": "es2015",
      "noImplicitAny": true,
      "outDir": "./dist",
      "target": "ES2017",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": false,
      "esModuleInterop": false,   
      "types": [
        "./node_modules/svelte-native"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules"]
  }